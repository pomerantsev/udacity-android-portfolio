<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#dfeaf1"
    tools:context=".MyAppPortfolio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="24dp"
        android:text="@string/portfolio_title"></TextView>

    <Button style="@style/BasicButton.Default"
        android:id="@+id/app1"
        android:text="@string/app1_title"
        android:onClick="onButtonClick" />

    <Button style="@style/BasicButton.Default"
        android:id="@+id/app2"
        android:text="@string/app2_title"
        android:onClick="onButtonClick" />

    <Button style="@style/BasicButton.Default"
        android:id="@+id/app3"
        android:text="@string/app3_title"
        android:onClick="onButtonClick" />

    <Button style="@style/BasicButton.Default"
        android:id="@+id/app4"
        android:text="@string/app4_title"
        android:onClick="onButtonClick" />

    <Button style="@style/BasicButton.Default"
        android:id="@+id/app5"
        android:text="@string/app5_title"
        android:onClick="onButtonClick" />

    <Button style="@style/BasicButton.Primary"
        android:id="@+id/app6"
        android:text="@string/app6_title"
        android:onClick="onButtonClick" />

</LinearLayout>
